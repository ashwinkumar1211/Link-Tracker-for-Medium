{
  "manifest_version": 3,
  "name": "Link Tracker",
  "version": "1.0",
  "description": "Link Tracker for Medium",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/bundle.js"],
      "css": ["dist/styles.css"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ]
}
